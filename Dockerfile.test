# Test Dockerfile
FROM node:18-alpine

# Install dependencies for testing
RUN apk add --no-cache git

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Create test results directory
RUN mkdir -p test-results

# Run tests by default
CMD ["npm", "test", "--", "--coverage", "--watchAll=false", "--testResultsProcessor=jest-junit"]
